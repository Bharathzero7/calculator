pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh 'echo Running tests...'
                // Add real test commands here
            }
        }

        stage('Build Docker') {
            steps {
                sh 'docker build -t myapp:latest .'
            }
        }

        stage('Push Docker') {
            steps {
                sh 'docker push my-dockerhub/myapp:latest'
            }
        }
    }
}

